# https://www.exim.org/exim-html-current/doc/html/spec_html/ch-the_default_configuration_file.html
    
primary_hostname = {0.domain_name}
qualify_domain = {0.domain_name}
domainlist local_domains = {0.domain_name}
domainlist relay_to_domains = *
hostlist relay_from_hosts = 10.1.0.1
tls_advertise_hosts =
keep_environment = true
rfc1413_hosts = *
rfc1413_query_timeout = 0s
prdr_enable = true
ignore_bounce_errors_after = 2d
timeout_frozen_after = 7d
check_rfc2047_length = false

acl_smtp_rcpt = acl_check_rcpt
acl_smtp_data = acl_check_data

begin acl
acl_check_rcpt:
    accept  hosts = :
            control       = dkim_disable_verify
    deny    message       = Restricted characters in address
            domains       = +local_domains
            local_parts   = ^[.] : ^.*[@%!/|]
    accept  local_parts   = postmaster
            domains       = +local_domains
    require verify        = sender
    accept  hosts         = +relay_from_hosts
            control       = submission 
    accept  authenticated = *
            control       = submission  
    require message       = relay not permitted
            domains       = +local_domains : +relay_to_domains  
    deny    message 			= invalid recipient (dovecot)
        		domains 			= +local_domains
        		!verify 			= recipient/callout=no_cache
    require verify        = recipient
    accept

acl_check_data:
    accept

begin routers
dnslookup:
    driver = dnslookup
    domains = ! +local_domains
    transport = remote_smtp
    ignore_target_hosts = 0.0.0.0 : 127.0.0.0/8
    no_more

localuser:
		driver = accept
		domains = +local_domains
		transport = dovecot_lmtp
		cannot_route_message = Cannot route: $local_part@{0.domain_name}

begin transports
remote_smtp:
    driver = smtp
    hosts_try_prdr = *

dovecot_lmtp:
		driver = lmtp
		socket = /run/lmtp

begin retry
    *                      *           F,2h,15m; G,16h,1h,1.5; F,4d,6h

begin authenticators
dovecot_plain:
		driver = dovecot
		public_name = PLAIN
		server_socket = /run/auth-client
